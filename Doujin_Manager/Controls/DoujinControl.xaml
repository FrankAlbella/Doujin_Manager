<UserControl x:Class="Doujin_Manager.Controls.DoujinControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Doujin_Manager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="213" d:DesignWidth="150">
    <Grid>
        <Image x:Name="CoverImage" HorizontalAlignment="Left" Height="213" Width="150" VerticalAlignment="Top"  Stretch="Fill" Margin="3" MouseLeftButtonUp="CoverImage_MouseLeftButtonUp">
            <Image.ContextMenu>
                <ContextMenu VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling">
                    <MenuItem Header="Open dojin directory" Click="OpenDirectoryMenuItem_Click"/>
                    <MenuItem Header="Edit doujin" Click="EditDoujinMenuItem_Click"/>
                </ContextMenu>
            </Image.ContextMenu>
        </Image>
    </Grid>
</UserControl>
