<Window x:Class="Doujin_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Doujin_Manager"
        mc:Ignorable="d"
        DataContext="{StaticResource DoujinViewModel}"
        Title="Doujin Manager" Height="600" Width="900" Loaded="Window_Loaded">
    <Grid >
        <StackPanel x:Name="doujinInfoPanel" VerticalAlignment="Top" Height="100" Margin="5">
            <TextBlock Text="{Binding Path=DoujinInfoViewModel.Title}" FontWeight="Bold"/>
            <TextBlock Text="{Binding Path=DoujinInfoViewModel.Author}" FontWeight="Bold"/>
            <TextBlock Text="{Binding Path=DoujinInfoViewModel.Tags}" FontWeight="Bold"/>
            <TextBlock Text="{Binding Path=DoujinInfoViewModel.Count}" FontWeight="Bold"/>
        </StackPanel>
        <ScrollViewer Margin="0,100,0,0" Background="#FFE8E8E8">
            <ItemsControl ItemsSource="{Binding Path=DoujinsViewModel.Doujins}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel x:Name="doujinPanel" HorizontalAlignment="Center" Loaded="doujinPanel_Loaded" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            
        </ScrollViewer>
    </Grid>
</Window>
